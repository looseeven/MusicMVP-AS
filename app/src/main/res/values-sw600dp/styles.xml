<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="player_global_padding">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">55dp</item>
        <item name="android:paddingRight">55dp</item>
        <item name="android:paddingTop">25dp</item>
    </style>

    <style name="im_album_value">
        <item name="android:layout_width">211dp</item>
        <item name="android:layout_height">212dp</item>
        <item name="android:layout_marginLeft">13dip</item>
        <item name="android:layout_marginTop">42dip</item>
    </style>

    <style name="tv_song_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_artist_album_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ll_fx_lrc_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">50dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="tv_time_value">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="seekbar_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>

    <style name="im_eq_value">
        <item name="android:layout_marginRight">170dp</item>
    </style>

    <style name="im_play_list_value">
        <item name="android:layout_marginRight">150dp</item>
    </style>

    <style name="im_bg_value">
        <item name="android:layout_marginLeft">170dp</item>
    </style>

    <style name="im_fx_value">
        <item name="android:layout_marginLeft">150dp</item>
    </style>

    <style name="ll_parting_value">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="re_music_list_item">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="re_music_list_item_tv_value">
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
