<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="player_album_bk">
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_marginTop">35dp</item>
    </style>

    <style name="im_album_value">
        <item name="android:layout_width">263dp</item>
        <item name="android:layout_height">253dp</item>
        <item name="android:layout_marginLeft">18dip</item>
        <item name="android:layout_marginTop">50dip</item>
    </style>

    <style name="tv_song_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_marginRight">75dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="tv_artist_album_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textSize">25dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ll_fx_lrc_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">50dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="tv_time_value">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="seekbar_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>

    <style name="ll_parting_value">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="re_music_list_item">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">78dp</item>
    </style>

    <style name="re_music_list_item_tv_value">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="music_list_albumart">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="music_list_song">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="music_list_artis">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
