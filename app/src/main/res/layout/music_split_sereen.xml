<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/player_global_padding"
    tools:context=".MusicActivity">

    <ImageView
        android:id="@+id/im_album_split_sereen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@mipmap/album_bk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pp_split_sereen"/>
    <ImageView
        android:id="@+id/iv_album_split_sereen"
        style="@style/im_album_value"
        app:layout_constraintLeft_toLeftOf="@+id/im_album_split_sereen"
        app:layout_constraintTop_toTopOf="@+id/im_album_split_sereen"/>

    <ImageView
        android:id="@+id/iv_collect_split_sereen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/im_album_split_sereen"
        app:layout_constraintBottom_toBottomOf="@+id/im_album_split_sereen"
        android:src="@drawable/selector_btn_collect" />

    <ImageView
        android:id="@+id/repeat_split_sereen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        app:layout_constraintRight_toRightOf="@+id/im_album_split_sereen"
        app:layout_constraintBottom_toBottomOf="@+id/im_album_split_sereen"
        android:src="@drawable/selector_btn_level_repeat_shuffle" />

    <TextView
        android:id="@+id/song_split_sereen"
        style="@style/tv_song_spilt_sereen_value"
        app:layout_constraintTop_toBottomOf="@+id/iv_album_split_sereen"
        app:layout_constraintBottom_toTopOf="@+id/iv_collect_split_sereen"
        app:layout_constraintLeft_toLeftOf="@+id/im_album_split_sereen"
        app:layout_constraintRight_toRightOf="@+id/im_album_split_sereen"
        />

    <ImageView
        android:id="@+id/prev_split_sereen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:onClick="onClick"
        android:scaleType="center"
        app:layout_constraintRight_toLeftOf="@+id/pp_split_sereen"
        app:layout_constraintBottom_toBottomOf="@+id/pp_split_sereen"
        app:layout_constraintTop_toTopOf="@+id/pp_split_sereen"
        android:src="@drawable/selector_btn_prev" />

    <ImageView
        android:id="@+id/pp_split_sereen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:scaleType="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/selector_btn_music_pp"
        app:layout_constraintTop_toBottomOf="@+id/im_album"
        />
    <ImageView
        android:id="@+id/next_split_sereen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf="@+id/pp_split_sereen"
        app:layout_constraintBottom_toBottomOf="@+id/pp_split_sereen"
        app:layout_constraintTop_toTopOf="@+id/pp_split_sereen"
        android:src="@drawable/selector_btn_next" />

</android.support.constraint.ConstraintLayout>